generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum TodoStatus {
  Open
  Completed
}

// In Prisma, the Todo type that is imported from the @prisma/client package represents the structure of the database model for the todo table. 
// This type is automatically generated by Prisma based on your Prisma schema file, which defines the structure of your database tables.
model Todo {
  id            String     @id @default(cuid())
  title         String     @db.Char(255)
  status        TodoStatus
  createdAt     String
  lastUpdatedAt String
  completedAt   String?
  creator       String?
}
